<odoo>
    <data>

        <record id="invoice_form_add_scale" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">ç
                    <field name="scale" />
                    <field name="ship" readonly="1"/>
                </field>
            </field>
        </record>

        <record id="invoice_tree_add_ship" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="ship"/>
                </field>
            </field>
        </record>

        <record id="account_invoice_search_add_ship" model="ir.ui.view">
            <field name="name">account.invoice.search</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <filter name="status" position="after">
                    <filter name="ship" string="Ship" context="{'group_by':'ship'}"/>
                </filter>
            </field>
        </record>

    </data>
</odoo>
