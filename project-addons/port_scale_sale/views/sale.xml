<odoo>
    <data>

        <record id="view_order_form_port_scale" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="impute_fault" type="object" string="Impute fault" states="draft,sent"/>
                    <button name="desembarque_ria" type="object" string="Desembarque ría de Ares" states="draft,sent"/>
                </header>
                <field name="partner_id" position="after">
                    <field name="scale"/>
                    <field name="operation"/>
                    <field name="scale_state" invisible="1"/>
                    <field name="input_request_date" attrs="{'invisible': [('scale_state', '!=', 'input')]}"/>
                    <field name="anchoring_request_date" attrs="{'invisible': [('scale_state', '!=', 'anchoring')]}"/>
                    <field name="departure_request_date" attrs="{'invisible': [('scale_state', '!=', 'departure')]}"/>
                    <field name="coast_pilot"/>
                    <field name="operation_start_time"/>
                    <field name="operation_end_time"/>
                </field>
                <field name="payment_term_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="colors">gray:state == 'cancel'; blue:state == 'sale'; green:state =='done'</attribute>
                </tree>
                <field name="user_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="user_id" position="after">
                    <field name="ship"/>
                </field>
            </field>
        </record>

        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="colors">gray:state == 'cancel'; blue:state == 'sale'; green:state =='done'</attribute>
                </tree>
                <field name="user_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="user_id" position="after">
                    <field name="ship"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
